        <script>
        function myFunction() {
          var input, filter, ul, li, a, i;
          input = document.getElementById("mySearch");
          filter = input.value.toUpperCase();
          ul = document.getElementById("myMenu");
          li = ul.getElementsByTagName("li");
          for (i = 0; i < li.length; i++) {
            a = li[i].getElementsByTagName("a")[0];
            if (a.innerHTML.toUpperCase().indexOf(filter) > -1) {
              li[i].style.display = "";
            } else {
              li[i].style.display = "none";
            }
          }
        }
        </script>


    <script type="text/javascript" >
                function setActive() {
                    aObj = document.getElementById('myMenu').getElementsByTagName('a');
                    for (i = 0; i < aObj.length; i++) {
                        if (document.location.href == aObj[i].href) {
                            
                            aObj[i].className = 'active1';
                        }
                    }
                }

                window.onload = setActive;
            </script>
          
            <script type="text/javascript">
                function openNav() {
                    if ( document.getElementById("left1").title.includes("Close")){
                        document.getElementById("left1").style = "width:25%;background-color:#ddd;";
                        document.getElementById("leftside").style = "width:25%;background-color:#ddd;position:fixed;height:100%;";
                        document.getElementById("right").style = "width:75%;";
                        document.getElementById("centerDiv").style = "width:100%; background-color:rgba(29, 27, 27, 0.78);top:0; position:sticky;";
                        document.getElementById("left1").title = "Open";
                        document.getElementById("mySearch").style = "width:100%";
                    }
                    else 
                    {
                        closeNav();
                    }
                    
                }

                function closeNav() {
                    document.getElementById("left1").style = "width:5%;background-color:#ddd;";
                    document.getElementById("leftside").style = "width:5%;background-color:#ddd;position:fixed;height:100%;";
                    document.getElementById("right").style = "width:95%;";
                    document.getElementById("centerDiv").style = "width:100%; background-color:rgba(29, 27, 27, 0.78);top:0; position:sticky;";
                    document.getElementById("left1").title = "Close";
                    document.getElementById("mySearch").style = "width:1px";

                }
            </script>
